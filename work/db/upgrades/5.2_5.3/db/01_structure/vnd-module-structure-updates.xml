    	<createTable tableName="PUR_VNDR_W8_OWNRSHP_ID_SEQ">
	  		<column name="ID" type="BIGINT(22)" autoIncrement="true">
	  			<constraints nullable="false" primaryKey="true"/>
	  		</column>
	  	</createTable>
    </changeSet>
  
 
</databaseChangeLog>