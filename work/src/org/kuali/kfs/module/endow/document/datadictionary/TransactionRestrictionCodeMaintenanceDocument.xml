<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:dd="http://rice.kuali.org/dd" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd         
		http://rice.kuali.org/dd         
		http://rice.kuali.org/dd/dd.xsd">

	<bean id="TransactionRestrictionCodeMaintenanceDocument" parent="TransactionRestrictionCodeMaintenanceDocument-parentBean"/>

	<bean id="TransactionRestrictionCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    	<property name="businessObjectClass" value="org.kuali.kfs.module.endow.businessobject.TransactionRestrictionCode"/>
    	<property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl"/>
    	<property name="maintainableSections">
      		<list>
        		<ref bean="TransactionRestrictionCodeMaintenanceDocument-EditTransactionRestrictionCode"/>
      		</list>
    	</property>
    	<property name="lockingKeys">
      		<list>
        		<value>code</value>
      		</list>
    	</property>
    
    	<property name="documentTypeName" value="TransactionRestrictionCodeMaintenanceDocument"/>
    	<property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase"/>
    	<property name="documentPresentationControllerClass" value="org.kuali.kfs.module.endow.document.authorization.TransactionRestrictionCodeDocumentPresentationController"/>
    	<property name="workflowAttributes">
    		<ref bean="TransactionRestrictionCodeMaintenanceDocument-workflowAttributes"/>
    	</property>
  	</bean>

<!-- Maintenance Section Definitions -->

  	<bean id="TransactionRestrictionCodeMaintenanceDocument-EditTransactionRestrictionCode" parent="TransactionRestrictionCodeMaintenanceDocument-EditTransactionRestrictionCode-parentBean"/>

  	<bean id="TransactionRestrictionCodeMaintenanceDocument-EditTransactionRestrictionCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    	<property name="id" value="Edit Transaction Restriction Code"/>
    	<property name="title" value="Edit Transaction Restriction Code"/>
    	<property name="maintainableItems">
      		<list>
        		<bean parent="MaintainableFieldDefinition" p:name="code" p:required="true"/>
        		<bean parent="MaintainableFieldDefinition" p:name="name" p:required="true"/>
        		<bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true"/>
      		</list>
    	</property>
  	</bean>
  
  <!-- workflow attributes -->
  <bean id="TransactionRestrictionCodeMaintenanceDocument-workflowAttributes" parent="TransactionRestrictionCodeMaintenanceDocument-workflowAttributes-parentBean"/>
  
  <bean id="TransactionRestrictionCodeMaintenanceDocument-workflowAttributes-parentBean" abstract="true" parent="WorkflowAttributes" />
</beans>
